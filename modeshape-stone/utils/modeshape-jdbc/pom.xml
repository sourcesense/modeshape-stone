    <profiles>
        <profile>
            <id>cargo-1</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

            <build>
             <resources>
                 <resource>
                  <filtering>false</filtering>
                      <directory>src/main/resources</directory>
                      <includes>
                           <include>*</include>
                           <include>**/*</include>
                        </includes>
