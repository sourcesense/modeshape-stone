<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.sourcesense.stone</groupId>
    <artifactId>stone-builder</artifactId>
    <packaging>pom</packaging>
    <version>1.0.0-SNAPSHOT</version>
    <inceptionYear>2011</inceptionYear>
    <name>Stone :: Parent</name>
    <description>Apache Sling integration with JBoss ModeShape</description>

    <organization>
        <name>Sourcesense</name>
        <url>http://www.sourcesense.com/</url>
    </organization>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <connection>scm:svn:https://dev.sourcesense.com/repos/dev/stone/trunk/</connection>
        <developerConnection>scm:svn:https://dev.sourcesense.com/repos/dev/stone/trunk/</developerConnection>
        <url>https://dev.sourcesense.com/repos/dev/stone/trunk/</url>
    </scm>

    <issueManagement>
        <system>Pivotal Tracker</system>
        <url>https://www.pivotaltracker.com/projects/199371</url>
    </issueManagement>

    <mailingLists>
        <mailingList>
            <name>stone-dev</name>
            <archive>http://groups.google.com/a/sourcesense.com/group/stone/topics</archive>
            <subscribe>http://groups.google.com/a/sourcesense.com/group/stone/subscribe</subscribe>
            <unsubscribe>http://groups.google.com/a/sourcesense.com/group/stone/subscribe</unsubscribe>
            <post>stone@sourcesense.com</post>
        </mailingList>
    </mailingLists>

    <prerequisites>
        <maven>2.2.1</maven>
    </prerequisites>

    <!-- List modules to be included in the build here ! -->
    <modules>
        <module>bundles/jcr/modeshape-server</module>
    </modules>

    <build>
        <plugins>
            
        </plugins>
    </build>

    <profiles>
        <profile>
            <!--
              Allow the integration tests to be excluded, as they might be slow
            -->
            <id>integrationTests</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <modules>
                <!--
                <module>launchpad/test-services</module>
                <module>launchpad/test-services-war</module>
                <module>launchpad/integration-tests</module>
                <module>launchpad/testing</module>
                -->
            </modules>
        </profile>
        <profile>
            <!--
              Run the integration tests against a war distribution
            -->
            <id>warIntegrationTests</id>
            <modules>
                <!--
                <module>launchpad/test-services</module>
                <module>launchpad/test-services-war</module>
                <module>launchpad/integration-tests</module>
                <module>launchpad/testing</module>
                <module>launchpad/testing-war</module>
                -->
            </modules>
        </profile>
      <!-- Profile for including samples -->
      <!--
        <profile>
            <id>withSamples</id>
            <modules>
                <module>samples</module>
            </modules>
        </profile>
        -->
      <!-- Profile for including contrib -->
      <!--
        <profile>
            <id>withContrib</id>
            <modules>
                <module>contrib</module>
            </modules>
        </profile>
        -->
    </profiles>

</project>
